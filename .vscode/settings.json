{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "eslint.format.enable": false,
  "eslint.lintTask.enable": true,
  "eslint.validate": [
    "typescript",
    "typescriptreact",
    "javascript",
    "javascriptreact",
    "vue"
  ],
  "volar.completion.normalizeComponentImportName": true,
  "volar.takeOverMode.extension": "Vue.volar",
  "volar.doctor.checkVueTsc": true,
  "volar.inlayHints.eventArgumentInInlineHandlers": true,
  "volar.codeLens.references": true,
  "volar.doctor.statusBarItem": true,
  "volar.completion.preferredTagNameCase": "pascal",
  "volar.completion.preferredAttrNameCase": "kebab",
  "editor.wrappingStrategy": "simple",
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 80,
  "volar.autoWrapParentheses": true,
  "volar.vueserver.petiteVue.processHtmlFile": true,
  "stylelint.enable": false,
  "stylelint.useLocal": true,
  "stylelint.autoFixOnSave": true,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "browse-lite.startUrl": "http://localhost:3000",
  "browse-lite.chromeExecutable": "/usr/bin/google-chrome-stable",
  "i18n-ally.localesPaths": ["./locales"],
  "i18n-ally.keystyle": "nested",
  "typescript.tsdk": "node_modules/typescript/lib",
  // "css.validate": false,
  // "less.validate": false,
  // "scss.validate": false,
  "files.associations": {
    "*.css": "postcss"
  }
}
