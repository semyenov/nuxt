{
  "editor.tabCompletion": "on",
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "eslint.alwaysShowStatus": true,
  "eslint.format.enable": false,
  "eslint.lintTask.enable": true,
  "eslint.validate": [
    "typescript",
    "typescriptreact",
    "javascript",
    "javascriptreact",
    "vue"
  ],
  "volar.codeLens.scriptSetupTools": true,
  "volar.completion.preferredTagNameCase": "pascal",
  "volar.completion.preferredAttrNameCase": "kebab",
  "volar.preview.port": 3000,
  "editor.wrappingStrategy": "simple",
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 80,
  "volar.autoWrapParentheses": true,
  "volar.vueserver.petiteVue.processHtmlFile": true,
  "stylelint.validate": [
    "css",
    "less",
    "postcss",
    "vue" // necessary for stylelint diagnostics in .vue <style> tag
  ],
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "browse-lite.startUrl": "http://localhost:3000",
  "browse-lite.chromeExecutable": "/usr/bin/google-chrome-stable",
  "i18n-ally.localesPaths": ["./locales"],
  "i18n-ally.keystyle": "nested",
  "typescript.tsdk": "node_modules/typescript/lib"
}
